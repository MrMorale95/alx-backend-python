#!/bin/bash

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "minikube is not installed"
    exit 1
fi

# Start minikube if not running
if ! minikube status | grep -q "Running"
then
    minikube start
fi

# Verify cluster is running
kubectl cluster-info

# Get available pods
kubectl get pods
